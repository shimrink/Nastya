@media screen and (max-width 480px)
    //Target smartphone portrait
    .burger-menu__copyright,
    .burger-menu__free
        display none

    .burger-menu
        grid-template-rows 1fr 1fr 1fr
        grid-template-columns 1fr 1fr
        padding 1vh 20px 20px 20px

    .burger-menu__logo
        grid-row 1/2
        grid-column 1/2

    .burger-menu__close
        grid-row 1/2
        grid-column 2/3
        justify-self end

    .burger-menu__nav
        grid-row 2/3
        grid-column 1/3
        align-self center

    .burger-menu__social
        grid-row 3/4
        grid-column 1/3
        align-self center

    .header__contacts
        padding 1vw 2vw

    .offer__hi
        grid-column 1/8

    .main-services__uxui-p
        grid-column 2/5

    .main-services__aidentika-p
        grid-column 2/5

    .main-services__smm-p
        grid-column 2/5

    .about__education
        grid-template-columns 1fr 1fr 1fr 1fr

    .about__education-title
        grid-column 1/5

    .about__narfu
        grid-column 2/5

    .about__samsung
        grid-column 2/5

    .about__skills
        grid-column 1/5
        margin-top 5vw
        display grid
        grid-template-rows 0.2fr 1fr
        grid-template-columns 1fr 1fr 1fr 1fr

    .about__skills-title
        grid-row 1/2
        grid-column 1/5

    .about__all-skills
        grid-row 2/3
        grid-column 2/5

    .about__clients
        grid-template-columns 1fr 1fr 1fr 1fr
        grid-gap 20px

    .about__clients-title
        grid-column 1/5

    .about__all-clients
        grid-column 2/5

    .service
        grid-template-columns 1fr 1fr 1fr 1fr

    .service__title
        grid-column 1/5

    .service__all-services
        grid-column 2/5
        font-size allServiceFS

    .service__disc
        grid-column 2/5
        font-size serviceFS

    .faq
        align-items flex-start

    .faq__wrap
        width 100%

    .faq__name
        width 100%

    .faq__plus
        padding 2vw

    .cases__cards
        grid-template-columns 1fr

    .card-name
        font-size cardNameMFS

    .card-date, .card-disc
        font-size cardDateDescMFS

    .card-tag
        font-size tagMFS