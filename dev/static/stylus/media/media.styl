@media screen and (max-width 1240px)
    //Target laptop
    .cursor-dot, .cursor-dot-outline
        display none

    header
        grid-template-columns 1fr 2fr 1fr
        grid-gap 1.1vw
        padding 1vh 1.1vw 1vh 1.1vw

    .header__svg
        grid-row 1/2
        grid-column 1/2

    .header__logo
        fill #fff
        height calc(30px + 20 * (100vw / 1240)) //50px

    .header__contacts
        border 1px solid
        border-radius 9em
        padding 0.5vw 1vw
        font-size headerContactsFontSize

    .header__item5
        display block
        grid-row 1/2
        grid-column 2/3
        justify-self center

    .header__item6
        grid-row 1/2
        grid-column 3/4
        justify-self end

    .header__burger
        display block
        cursor pointer
        height calc(21px + 14 * (100vw / 1240)) //35px
    
    .burger-menu
        position fixed
        z-index 11
        display grid
        grid-template-rows repeat(5, 1fr)
        grid-template-columns 1fr 1fr
        grid-gap 1.6vw
        padding 1vh 1.1vw 1vh 1.1vw
        width 100vw
        height 100vh
        background-color bgColor
    
    .burger-menu_closed
        transition transform 0.4s
        transform translateX(100%)

    .burger-menu_opened
        transition transform 0.4s
        transform translateX(0)
    
    .burger-menu__logo
        grid-row 1/2
        grid-column 1/2

    .burger-menu__close
        grid-row 1/2
        grid-column 2/3
        justify-self end

    .burger-menu__svg
        width 40px
        height 40px
        stroke none
        stroke-width 0.1vw
        fill none
        fill-rule evenodd
        stroke-linecap square
        stroke #fff
        transform rotate(45deg)
        cursor pointer

    .burger-menu__nav
        grid-row 2/4
        grid-column 2/3
        align-self end
        font-family headerFont
        font-size burgerMenuFS

    .burger-menu__social
        grid-row 4/5
        grid-column 2/3

    .burger-menu__copyright
        grid-row 5/6
        grid-column 1/2
        align-self end

    .burger-menu__free
        grid-row 5/6
        grid-column 2/3
        align-self end
        justify-self end

    .nav__item1, .nav__item2, .nav__item3, .nav__item4
        display none

    .offer__hi
        grid-column 1/8
    
    .offer__title
        grid-column 1/13

    .offer__free
        display none

