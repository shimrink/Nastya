@media screen and (max-width 1240px)
    //Target tablet landscape
    .cursor-dot,
    .cursor-dot-outline,
    .nav__item1,
    .nav__item2,
    .nav__item3,
    .nav__item4,
    .offer__free,
    .main-services__button,
    .cases,
    .about__prototype,
    .tariffs
        display none

    header
        grid-template-columns 1fr 2fr 1fr
        grid-gap 1.1vw
        padding 1vh 1.1vw 1vh 1.1vw

    .header__svg
        grid-row 1/2
        grid-column 1/2

    .header__logo
        fill #fff
        height calc(30px + 20 * (100vw / 1240)) //50px

    .header__contacts
        border 1px solid
        border-radius 9em
        padding 0.5vw 1vw
        font-size headerContactsFontSize

    .header__item5
        display block
        grid-row 1/2
        grid-column 2/3
        justify-self center

    .header__item6
        grid-row 1/2
        grid-column 3/4
        justify-self end

    .header__burger
        display block
        cursor pointer
        height calc(21px + 14 * (100vw / 1240)) //35px
    
    .burger-menu
        position fixed
        z-index 11
        display grid
        grid-template-rows repeat(5, 1fr)
        grid-template-columns 1fr 1fr
        grid-gap 1.6vw
        padding 1vh 1.1vw 1vh 1.1vw
        width 100vw
        height 100vh
        background-color bgColor
    
    .burger-menu_closed
        transition transform 0.4s
        transform translateX(100%)

    .burger-menu_opened
        transition transform 0.4s
        transform translateX(0)
    
    .burger-menu__logo
        grid-row 1/2
        grid-column 1/2

    .burger-menu__close
        grid-row 1/2
        grid-column 2/3
        justify-self end

    .burger-menu__svg
        height calc(30px + 20 * (100vw / 1240))
        stroke none
        stroke-width 0.1vw
        fill none
        fill-rule evenodd
        stroke-linecap square
        stroke #fff
        transform rotate(45deg)
        cursor pointer

    .burger-menu__nav
        grid-row 2/4
        grid-column 2/3
        align-self end
        font-size burgerMenuFS

    .burger-menu__social
        grid-row 4/5
        grid-column 2/3

    .burger-menu__copyright
        grid-row 5/6
        grid-column 1/2
        align-self end

    .burger-menu__free
        grid-row 5/6
        grid-column 2/3
        align-self end
        justify-self end

    .offer__hi
        grid-column 1/8

    .offer__title
        grid-column 1/13

    .main-services
        grid-template-rows repeat(5, 1fr)
        grid-template-columns repeat(6, 1fr)

    .main-services__item11
        grid-column 1/4

    .main-services__discription
        grid-column 4/7

    .main-services__title_uxui
        grid-column 1/3

    .main-services__uxui-p
        grid-column 1/3

    .main-services__title_aidentika
        grid-column 3/5

    .main-services__aidentika-p
        grid-column 3/5

    .main-services__title_smm
        grid-column 5/7

    .main-services__smm-p
        grid-column 5/7

    .main-services__item24
        grid-row 5/6
        grid-column 1/7
        align-self center
        justify-self start

    .main-services__button2
        display block
        font-family headerFont
        font-size main-services-font-size

    .main-services__svg
        display block
        height calc(16px + 4 * (100vw / 1240)) //20px
        transition transform 0.2s
        transform translateX(1vw)
    
    .main-services__item24:hover .main-services__svg
        transition transform 0.2s
        transform translateX(4vw)
    
    .casesGrab
        display flex
        cursor grab
        padding 0 2.13vw
        margin-top 5vw
        -webkit-user-select none
        -moz-user-select none
        overflow hidden
    
    .card
        min-width calc(280px + 200 * (100vw / 1240)) //280px
        margin-right 5vw
    
    .cases-title
        display block
        padding-left 2.13vw
    
    .cases-arrow
        display flex
        //max-width 45vw
        padding 4vw 0 0 2.13vw
    
    .cases-arrow:hover .main-services__svg
        transition transform 0.2s
        transform translateX(4vw)

    .about__skills
        grid-column 1/3
        margin-top 5vw
        display grid
        grid-gap 1.6vw
        grid-template-rows 0.2fr 1fr
        grid-template-columns 1fr 1fr

    .about__skills-title
        grid-row 1/2
        grid-column 1/3
    
    .about__all-skills
        grid-row 2/3
        grid-column 2/3
        grid-template-rows 1fr 1fr 1fr 1fr
        grid-template-columns 1fr 1fr
    
    .about__all-clients
        grid-template-rows repeat(9, 1fr)
        grid-template-columns 1fr
        grid-row-gap 3vw
    
    .cases_grab-portfolio
        margin-top 20vh
    
    .tariffs-mobile
        display block

    #faqName11, #faqName14, #faqName17
        border-bottom 1px solid
    
    .faq__name
        padding 3vw 0 3vw 0

    .faq__answer
        padding-top 3vw

    .faq__answer p
        padding-bottom 3vw
    
    footer
        grid-template-rows 2fr 1fr 1fr 1fr 1fr 1fr
        grid-template-columns 1fr 1fr
    
    .footer__title
        grid-column 1/3
    
    .footer__item21
        grid-column 1/2

    .footer__item22
        grid-column 2/3

    .footer__item23
        grid-row 3/4
        grid-column 2/3
        justify-self start

    .footer__button
        grid-row 4/5
        grid-column 2/3
        padding 1vw 2vw
        justify-self start

    .footer__item31
        grid-row 6/7
        grid-column 1/2

    .footer__item32
        grid-row 5/6
        grid-column 2/3

    .footer__item33
        grid-row 6/7
        grid-column 2/3
        justify-self start

@media screen and (max-width 768px)
    //Target tablet portrait
    .offer__bg
        display none

    .offer
        grid-template-rows 2fr 1fr 1fr
        grid-template-columns repeat(8, 1fr)
        grid-gap 1vw

    .offer__hi
        grid-row 2/3
        grid-column 1/7
        align-self end
        z-index 3

    .offer__title
        grid-row 3/4
        grid-column 1/9
        z-index 3

    .offer__title_bottom
        align-self center

    .offer__bg-mobile
        display flex
        justify-content center
        grid-row 1/4
        grid-column 1/9
        order 1
        overflow hidden

    .offer__bg-mobile_main-grad:after
        content ""
        bottom 0
        width 100%
        height 95%
        position absolute
        background linear-gradient(to top, #1e1e1eff, #1e1e1e00)

    .offer__bg-mobile_serv-grad:after
        content ""
        bottom 0
        width 100%
        height 7%
        position absolute
        background linear-gradient(to top, #1e1e1eff, #1e1e1e00)

    .offer__bg-mobile_serv-portf:after
        content ""
        bottom 0
        width 100%
        height 80%
        position absolute
        background linear-gradient(to top, #1e1e1eff, #1e1e1e00)

    .offer__img
        width 100%
        height 100%
        object-fit cover
        -webkit-user-drag none

    .main-services
        grid-template-rows 2fr 1.5fr 0.2fr 1fr 0.2fr 1fr 0.2fr 1fr 1fr
        grid-template-columns repeat(4, 1fr)
        grid-gap 1vw
        margin-top 0
        min-height 0
        padding 25vw 2.13vw 0 2.13vw

    .main-services__item11
        grid-row 1/2
        grid-column 1/5
        justify-self center
        padding-right 0

    .main-services__img
        max-width 100%
        height auto

    .main-services__discription
        grid-row 2/3
        grid-column 1/5
        align-self start
        font-size mainServicesDescFSMobile

    .main-services__title
        align-self flex-start
        padding 4vw 0 4vw 0

    .main-services__title_uxui
        grid-row 3/4
        grid-column 1/5

    .main-services__uxui-p
        grid-row 4/5
        grid-column 3/5
        font-size mainServicesFSMobile

    .main-services__title_aidentika
        grid-row 5/6
        grid-column 1/5

    .main-services__aidentika-p
        grid-row 6/7
        grid-column 3/5
        font-size mainServicesFSMobile

    .main-services__title_smm
        grid-row 7/8
        grid-column 1/5

    .main-services__smm-p
        grid-row 8/9
        grid-column 3/5
        font-size mainServicesFSMobile

    .main-services__item24
        grid-row 9/10
        grid-column 1/5
        align-self flex-start

    .service
        margin-top 0.1vh

    .policy
        margin-top 0.1vh
        padding 5vw 5vw 5vw 5vw

    .grab-block
        min-width 55vw

    .faq
        padding-bottom 5vw

    .faq__plus
        padding 1vw

@media screen and (max-width 480px)
    //Target smartphone
    .burger-menu__copyright,
    .burger-menu__free
        display none

    .burger-menu
        grid-template-rows 1fr 1fr 1fr
        grid-template-columns 1fr 1fr
        padding 1vh 2.13vw 2.13vh 2.13vw

    .burger-menu__logo
        grid-row 1/2
        grid-column 1/2

    .burger-menu__close
        grid-row 1/2
        grid-column 2/3
        justify-self end

    .burger-menu__nav
        grid-row 2/3
        grid-column 1/3
        align-self center

    .burger-menu__social
        grid-row 3/4
        grid-column 1/3
        align-self end

    .offer__hi
        grid-column 1/8

    .main-services__uxui-p
        grid-column 2/5

    .main-services__aidentika-p
        grid-column 2/5

    .main-services__smm-p
        grid-column 2/5

    .about__education
        grid-template-columns 1fr 1fr 1fr 1fr
        grid-gap 1vw

    .about__education-title
        grid-column 1/5

    .about__narfu
        grid-column 2/5

    .about__samsung
        grid-column 2/5

    .about__skills
        grid-column 1/5
        margin-top 5vw
        display grid
        grid-template-rows 0.2fr 1fr
        grid-template-columns 1fr 1fr 1fr 1fr
        grid-gap 1vw

    .about__skills-title
        grid-row 1/2
        grid-column 1/5

    .about__all-skills
        grid-row 2/3
        grid-column 2/5

    .about__clients
        grid-template-columns 1fr 1fr 1fr 1fr
        grid-gap 1vw

    .about__clients-title
        grid-column 1/5

    .about__all-clients
        grid-column 2/5

    .service
        grid-template-columns 1fr 1fr 1fr 1fr

    .service__title
        grid-column 1/5

    .service__all-services
        grid-column 2/5
        font-size allServiceFS

    .service__disc
        grid-column 2/5
        font-size serviceFS

    .faq__name
        width 100%

    .grab-block
        min-width 70vw

    .faq__plus
        padding 2vw