@media screen and (max-width 1279px)
    //Target tablet landscape
    .card-name
        font-size cardNameTLFS

    .card-date, .card-disc
        font-size cardDateDescTLFS

    .card-tag
        font-size tagTLFS

@media screen and (max-width 1023px)
    //Target tablet portrait
    .cursor-dot,
    .cursor-dot-outline,
    .nav__item1,
    .nav__item2,
    .nav__item3,
    .nav__item4,
    .offer__free,
    .main-services__button,
    .cases__main,
    .about__prototype,
    .tariffs,
    .footer__item24
        display none

    h1, h2
        font-size tabletMainTitleFS

    header
        grid-template-columns 1fr 2fr 1fr
        grid-gap 20px
        padding 0 20px 0 20px
        height 50px

    .header__svg
        grid-row 1/2
        grid-column 1/2

    .header__logo
        fill #fff
        height 30px

    .header__contacts
        border 1px solid
        border-radius 9em
        padding 0.5vw 1vw
        font-size headerContactsFS

    .header__item5
        display block
        grid-row 1/2
        grid-column 2/3
        justify-self center

    .header__item6
        grid-row 1/2
        grid-column 3/4
        justify-self end

    .header__burger
        display block
        cursor pointer
        height 19px
    
    .burger-menu
        position fixed
        z-index 11
        display grid
        grid-template-rows repeat(5, 1fr)
        grid-template-columns 1fr 1fr
        grid-gap 20px
        padding 1vh 20px 1vh 20px
        width 100vw
        height 100vh
        background-color bgColor
    
    .burger-menu_closed
        transition transform 0.4s
        transform translateX(100%)

    .burger-menu_opened
        transition transform 0.4s
        transform translateX(0)
    
    .burger-menu__logo
        grid-row 1/2
        grid-column 1/2

    .burger-menu__close
        grid-row 1/2
        grid-column 2/3
        justify-self end

    .burger-menu__svg
        height calc(30px + 20 * (100vw / 1240))
        stroke none
        stroke-width 0.1vw
        fill none
        fill-rule evenodd
        stroke-linecap square
        stroke #fff
        transform rotate(45deg)
        cursor pointer

    .burger-menu__nav
        grid-row 2/4
        grid-column 2/3
        align-self end
        font-size burgerMenuFS

    .burger-menu__social
        grid-row 4/5
        grid-column 2/3

    .burger-menu__copyright
        grid-row 5/6
        grid-column 1/2
        align-self end

    .burger-menu__free
        grid-row 5/6
        grid-column 2/3
        align-self end
        justify-self end

    .offer
        grid-template-rows 2fr 1fr 1fr
        grid-template-columns repeat(8, 1fr)
        grid-gap 20px

    .offer__bg
        grid-row 1/4
        grid-column 1/9

    .offer__hi
        grid-row 2/3
        grid-column 1/6
        align-self end
        padding-left 20px
        z-index 3

    .offer__title
        grid-row 3/4
        grid-column 1/9
        padding-left 20px
        z-index 3

    .offer__title_bottom
        align-self center

    .main-services
        grid-template-rows 1fr 1fr 0.5fr
        grid-gap 20px
        padding doubleIndent 20px defIndent 20px

    .main-services__all-services
        grid-column 1/5

    .main-services__item24
        grid-row 3/4
        grid-column 1/5
        align-self center
        justify-self start

    .main-services__button2
        display block
        font-family headerFont
        font-size main-services-font-size

    .main-services__svg
        display block

    .casesGrab
        display flex
        padding-left 20px
        margin-top miniIndent

    .card__grab
        margin-right 20px
        min-width calc(280px + 200 * (100vw / 1240)) //280px

    .cases-title
        display block
        padding-left 20px

    .casesGrab_portfolio
        margin 0.1vh 0 defIndent 0

    .cases-arrow
        margin miniIndent 20px defIndent 20px

    .card
        grid-gap 20px
        padding 20px

    .card-name
        font-size cardNameTPFS

    .card-date, .card-disc
        font-size cardDateDescTPFS

    .card-tag
        font-size tagTPFS

    .cases__cards
        grid-template-columns 1fr 1fr
        grid-gap 20px

    .about
        padding defIndent 20px

    .about__education
        grid-gap 20px

    .about__skills
        grid-column 1/3
        margin-top miniIndent
        display grid
        grid-gap 20px
        grid-template-rows 0.2fr 1fr
        grid-template-columns 1fr 1fr

    .about__skills-title
        grid-row 1/2
        grid-column 1/3

    .about__all-skills
        grid-row 2/3
        grid-column 2/3
        grid-template-rows 1fr 1fr 1fr 1fr
        grid-template-columns 1fr 1fr
        grid-gap 20px

    .about__all-clients
        grid-template-rows repeat(9, 1fr)
        grid-template-columns 1fr
        grid-gap 20px

    .service
        padding miniIndent 20px 20px 20px
        grid-gap 20px

    .tariffs-mobile
        display block

    .service__all-services
        grid-column-gap 20px

    .method-title
        padding doubleIndent 20px 0 20px

    .carousel-cell
        min-width 37vw

    .faq
        padding miniIndent 20px

    .faq-title
        padding miniIndent 20px 0 20px

    .faq__name
        padding 2.5vw 0 2.5vw 0

    .faq__answer
        padding-bottom 3vw

    footer
        min-height 70vh
        margin-top doubleIndent
        grid-template-rows 2fr 1fr 1fr 1fr 1fr 1fr
        grid-template-columns 1fr 1fr
        grid-gap 20px
        padding 0 20px 30px 20px

    .footer__title
        grid-column 1/3

    .footer__item21
        grid-column 1/2

    .footer__item22
        grid-column 2/3

    .footer__item23
        grid-row 3/4
        grid-column 2/3
        justify-self start

    .footer__button
        display block
        grid-row 4/5
        grid-column 2/3
        justify-self start
        border 1px solid
        border-radius 9em
        padding 1vw 2vw
        font-size footerFS

    .footer__item31
        grid-row 6/7
        grid-column 1/2

    .footer__item32
        grid-row 5/6
        grid-column 2/3

    .footer__item33
        grid-row 6/7
        grid-column 2/3
        justify-self start

@media screen and (max-width 767px)
    //Target tablet-mini
    h1, h2
        font-size mobileMainTitleFS

    .header__contacts
        padding 0.75vw 1.5vw

    .useful__title
        font-size mobileUsefulTitleFS

    .offer__bg
        display none

    .offer__hi
        grid-column 1/7

    .offer__bg-mobile
        display flex
        justify-content center
        grid-row 1/4
        grid-column 1/9
        order 1
        overflow hidden

    .offer__bg-mobile_main-grad:after
        content ""
        bottom 0
        width 100%
        height 95%
        position absolute
        background linear-gradient(to top, #1e1e1eff, #1e1e1e00)

    .offer__bg-mobile_serv-grad:after
        content ""
        bottom 0
        width 100%
        height 7%
        position absolute
        background linear-gradient(to top, #1e1e1eff, #1e1e1e00)

    .offer__bg-mobile_serv-portf:after
        content ""
        bottom 0
        width 100%
        height 80%
        position absolute
        background linear-gradient(to top, #1e1e1eff, #1e1e1e00)

    .main-services
        grid-template-rows none
        grid-template-columns 1fr
        margin-top 0
        min-height 0
        padding-top defIndent

    .main-services__item11
        grid-row 1/2
        grid-column 1/2
        justify-self center
        align-self start
        padding 0
        height auto

    .main-services__img
        max-width 100%
        height auto

    .main-services__discription
        grid-row 2/3
        grid-column 1/2
        align-self center
        font-size mainServicesDescFSMobile

    .main-services__all-services
        grid-row 3/4
        grid-column 1/2
        grid-template-rows none
        grid-template-columns 1fr 1fr
        grid-column-gap 20px
        grid-row-gap 0

    .main-services__title
        align-self flex-start
        padding 13px 0 16px 0

    .main-services__title_uxui
        grid-row 1/2
        grid-column 1/3

    .main-services__uxui-p
        grid-row 2/3
        grid-column 2/3
        padding-bottom 26px
        font-size mainServicesFSMobile

    .main-services__title_aidentika
        grid-row 3/4
        grid-column 1/3

    .main-services__aidentika-p
        grid-row 4/5
        grid-column 2/3
        padding-bottom 26px
        font-size mainServicesFSMobile

    .main-services__title_smm
        grid-row 5/6
        grid-column 1/3

    .main-services__smm-p
        grid-row 6/7
        grid-column 2/3
        padding-bottom 26px
        font-size mainServicesFSMobile

    .main-services__line
        display block
        align-self end
        grid-row 6/7
        grid-column 1/3
        width 100%
        border-top 1px solid

    .main-services__item24
        grid-row 4/5
        grid-column 1/2
        margin-top 13px

    .service
        margin-top 0.1vh

    .policy
        margin-top 0.1vh
        padding 5vw

    .faq__plus
        padding 1vw

    .card-name
        font-size cardNameTMFS

    .card-date, .card-disc
        font-size cardDateDescTMFS

    .card-tag
        font-size tagTMFS

