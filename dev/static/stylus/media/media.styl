@media screen and (max-width 1279px)
    //Target tablet landscape
    .cursor-dot,
    .cursor-dot-outline
        display none

    .offer__hi
        grid-column 1/8

    .faq
        grid-column 1/4

    .card-name
        font-size cardNameTLFS

    .card-date, .card-disc
        font-size cardDateDescTLFS

    .card-tag
        font-size tagTLFS

    .tariffs__list
        font-size tagTLFS

@media screen and (max-width 1023px)
    //Target tablet portrait
    .header__nav,
    .offer__free,
    .main-services__button,
    .cases__main,
    .about__prototype,
    .tariffs,
    .footer__item24
        display none

    h1, h2
        font-size tabletMainTitleFS

    .services__title
        font-size tabletServTitleFS

    header
        grid-template-columns 1fr 2fr 1fr
        grid-column-gap 20px
        padding 0 20px 0 20px
        height 50px

    .header__svg
        grid-row 1/2
        grid-column 1/2

    .header__logo
        fill #fff
        height 30px

    .header__contacts
        border 1px solid
        border-radius 9em
        padding 0.5vw 1vw
        font-size headerContactsFS

    .header__item5
        display block
        grid-row 1/2
        grid-column 2/3
        justify-self center

    .header__item6
        grid-row 1/2
        grid-column 3/4
        justify-self end

    .header__burger
        display block
        cursor pointer
        height 19px
    
    .burger-menu
        position fixed
        z-index 11
        display grid
        grid-template-rows repeat(5, 1fr)
        grid-template-columns 1fr 1fr
        grid-gap 20px
        padding 1vh 20px 1vh 20px
        width 100vw
        height 100vh
        background-color bgColor
    
    .burger-menu_closed
        transition transform 0.4s
        transform translateX(100%)

    .burger-menu_opened
        transition transform 0.4s
        transform translateX(0)
    
    .burger-menu__logo
        grid-row 1/2
        grid-column 1/2

    .burger-menu__close
        grid-row 1/2
        grid-column 2/3
        justify-self end

    .burger-menu__svg
        height calc(30px + 20 * (100vw / 1240))
        stroke none
        stroke-width 0.1vw
        fill none
        fill-rule evenodd
        stroke-linecap square
        stroke #fff
        transform rotate(45deg)
        cursor pointer

    .burger-menu__nav
        grid-row 2/4
        grid-column 2/3
        align-self end
        font-size burgerMenuFS

    .burger-menu__social
        grid-row 4/5
        grid-column 2/3
        font-size burgerContactsFS

    .burger-menu__copyright
        grid-row 5/6
        grid-column 1/2
        align-self end

    .burger-menu__free
        grid-row 5/6
        grid-column 2/3
        align-self end
        justify-self end

    .offer
        grid-template-rows 2fr 1fr 1fr
        grid-template-columns repeat(8, 1fr)
        grid-gap 20px

    .offer__bg
        grid-row 1/4
        grid-column 1/9

    .offer__hi
        grid-row 2/3
        grid-column 1/6
        align-self end
        padding 0 20px

    .offer__title
        grid-row 3/4
        grid-column 1/9
        padding 0 20px

    .offer__title_bottom
        align-self center

    .offer__bg_portf
        display none

    .offer__hi_portf
        grid-column 1/7

    .offer__bg-mobile_portf
        display flex
        justify-content center
        grid-row 1/4
        grid-column 1/9
        order 1
        overflow hidden

    .offer__bg-mobile_main-grad:after
        content ""
        bottom 0
        width 100%
        height 95%
        position absolute
        background linear-gradient(to top, #1e1e1eff, #1e1e1e00)

    .offer__bg-mobile_serv-grad:after
        content ""
        bottom 0
        width 100%
        height 7%
        position absolute
        background linear-gradient(to top, #1e1e1eff, #1e1e1e00)

    .offer__bg-mobile_portf-grad:after
        content ""
        bottom 0
        width 100%
        height 80%
        position absolute
        background linear-gradient(to top, #1e1e1eff, #1e1e1e00)

    .main-services
        grid-template-rows 1fr 1fr 0.5fr
        grid-gap 20px
        padding quadrupleIndent 20px doubleIndent 20px

    .main-services__all-services
        grid-column 1/5

    .main-services__item24
        grid-row 3/4
        grid-column 1/5
        align-self center
        justify-self start

    .main-services__button2
        display block
        font-family headerFont
        font-size main-services-font-size

    .main-services__svg
        display block

    .cases
        padding doubleIndent 20px 0 20px

    .cases__portfolio
        padding 0 20px doubleIndent 20px

    .casesGrab
        display flex
        padding-left 20px
        margin-top miniIndent

    .card__grab
        margin-right 20px
        min-height calc((280px + 200 * (100vw / 1240)) * 1.33)
        min-width calc(280px + 200 * (100vw / 1240)) //280px

    .cases-title
        display block
        padding-left 20px

    .casesGrab_portfolio
        margin 0.1vh 0 doubleIndent 0

    .cases-arrow
        margin calc(22px + 50 * (100vw / 1920)) 20px doubleIndent 20px

    .card
        height 45vw * 1.33
        grid-gap calc(13px + 7 * (100vw / 1023))
        padding calc(13px + 7 * (100vw / 1023))

    .card-name
        font-size cardNameTPFS

    .card-date, .card-disc
        font-size cardDateDescTPFS

    .card-tag
        font-size tagTPFS

    .cases__cards
        grid-template-columns 1fr 1fr
        grid-gap 20px

    .about
        padding doubleIndent 20px

    .about__education
        grid-gap 20px
        padding 13px 0 26px 0

    .about__samsung
        padding-bottom 13px

    .about__skills
        grid-column 1/3
        display grid
        grid-gap 20px
        grid-template-columns 1fr 1fr

    .about__skills-title
        grid-row 1/2
        grid-column 1/3
        padding-bottom 0

    .about__all-skills
        grid-row 2/3
        grid-column 2/3
        grid-template-columns 1fr 1fr
        grid-gap 20px

    .about__clients
        grid-gap 20px

    .about__all-clients
        grid-template-columns 1fr
        grid-gap 20px

    .service
        padding defIndent 20px
        grid-gap 20px

    .tariffs-mobile
        display block

    .method-title
        padding quadrupleIndent 20px 0 20px

    .carousel-cell
        min-width calc(210px + 320 * (100vw / 1920))
        padding 0 20px

    .faq__main-wrap
        grid-gap 20px

    .faq
        padding miniIndent 20px defIndent 20px

    .faq-title
        padding defIndent 20px 0 20px

    .faq__name
        padding 2.5vw 0 2.5vw 0

    .faq__answer
        padding-bottom 3vw

    footer
        min-height 70vh
        margin-top doubleIndent
        grid-template-rows 2fr 1fr 1fr 1fr 1fr 1fr
        grid-template-columns 1fr 1fr
        grid-gap 20px
        padding 0 20px 30px 20px

    .footer__title
        grid-column 1/3

    .footer__item21
        grid-column 1/2

    .footer__item22
        grid-column 2/3

    .footer__item23
        grid-row 3/4
        grid-column 2/3
        justify-self start

    .footer__button
        display block
        grid-row 4/5
        grid-column 2/3
        justify-self start
        border 1px solid
        border-radius 9em
        padding 1vw 2vw
        font-size footerFS

    .footer__item31
        grid-row 6/7
        grid-column 1/2

    .footer__item32
        grid-row 5/6
        grid-column 2/3
        font-size footerFS

    .footer__item33
        grid-row 6/7
        grid-column 2/3
        justify-self start

@media screen and (max-width 767px)
    //Target tablet-mini
    h1, h2
        font-size mobileMainTitleFS

    .header__contacts
        padding 0.75vw 1.5vw

    .portfolio__title
        font-size mobilePortfTitleFS

    .services__title
        font-size mobileServTitleFS

    .useful__title
        font-size mobileUsefulTitleFS

    .offer__bg
        display none

    .offer__hi
        grid-column 1/7

    .offer__bg-mobile
        display flex
        justify-content center
        grid-row 1/4
        grid-column 1/9
        order 1
        overflow hidden

    .main-services
        grid-template-rows none
        grid-template-columns 1fr
        margin-top 0
        min-height 0
        padding-top doubleIndent

    .main-services__item11
        grid-row 1/2
        grid-column 1/2
        justify-self center
        align-self start
        padding 0
        height auto

    .main-services__img
        max-width 100%
        height auto

    .main-services__discription
        grid-row 2/3
        grid-column 1/2
        align-self center
        font-size mainServicesDescFSMobile

    .main-services__all-services
        grid-row 3/4
        grid-column 1/2
        grid-template-rows none
        grid-template-columns 1fr 1fr
        grid-column-gap 20px
        grid-row-gap 0

    .main-services__title
        align-self flex-start
        padding 13px 0 16px 0

    .main-services__title_uxui
        grid-row 1/2
        grid-column 1/3

    .main-services__uxui-p
        grid-row 2/3
        grid-column 2/3
        padding-bottom 26px
        font-size mainServicesFSMobile

    .main-services__title_aidentika
        grid-row 3/4
        grid-column 1/3

    .main-services__aidentika-p
        grid-row 4/5
        grid-column 2/3
        padding-bottom 26px
        font-size mainServicesFSMobile

    .main-services__title_smm
        grid-row 5/6
        grid-column 1/3

    .main-services__smm-p
        grid-row 6/7
        grid-column 2/3
        padding-bottom 26px
        font-size mainServicesFSMobile

    .main-services__line
        display block
        align-self end
        grid-row 6/7
        grid-column 1/3
        width 100%
        border-top 1px solid

    .main-services__item24
        grid-row 4/5
        grid-column 1/2
        margin-top 13px

    .service
        margin-top 0.1vh

    .policy
        margin-top 0.1vh
        padding 5vw

    .faq__plus
        padding 1vw

    .card-name
        font-size cardNameTMFS

    .card-date, .card-disc
        font-size cardDateDescTMFS

    .card-tag
        font-size tagTMFS

    .card__grab .card-name
        font-size calc(0px + 44 * (100vw / 1240))

    .card__grab .card-date
        font-size calc(0px + 23 * (100vw / 1240))

    .card__grab .card-disc
        font-size calc(0px + 23 * (100vw / 1240))

    .card__grab .card-tag
        font-size calc(0px + 24 * (100vw / 1240))

@media screen and (max-width 600px)
    //Target smartphone
    .burger-menu__copyright,
    .burger-menu__free
        display none

    .burger-menu
        grid-template-rows 1fr 1fr 1fr
        grid-template-columns 1fr 1fr
        padding 1vh 20px 20px 20px

    .burger-menu__logo
        grid-row 1/2
        grid-column 1/2

    .burger-menu__close
        grid-row 1/2
        grid-column 2/3
        justify-self end

    .burger-menu__nav
        grid-row 2/3
        grid-column 1/3
        align-self center

    .burger-menu__social
        grid-row 3/4
        grid-column 1/3

    .header__contacts
        padding 1vw 2vw

    .offer__hi
        grid-column 1/8

    .main-services
        padding defIndent 20px quadrupleIndent 20px

    .main-services__all-services
        grid-template-columns repeat(4, 1fr)

    .main-services__title
        grid-column 1/5

    .main-services__uxui-p
        grid-column 2/5

    .main-services__line
        grid-column 1/5

    .main-services__aidentika-p
        grid-column 2/5

    .main-services__smm-p
        grid-column 2/5

    .about__education
        grid-template-columns 1fr 1fr 1fr 1fr

    .about__education-title
        grid-column 1/5

    .about__narfu
        grid-column 2/5

    .about__samsung
        grid-column 2/5

    .about__skills
        grid-column 1/5
        display grid
        grid-template-columns 1fr 1fr 1fr 1fr

    .about__skills-title
        grid-row 1/2
        grid-column 1/5

    .about__all-skills
        grid-row 2/3
        grid-column 2/5

    .about__clients
        grid-template-columns 1fr 1fr 1fr 1fr
        grid-gap 20px

    .about__clients-title
        grid-column 1/5

    .about__all-clients
        grid-column 2/5

    .service
        grid-template-columns 1fr 1fr 1fr 1fr

    .service__title
        grid-column 1/5

    .service__all-services
        grid-column 2/5

    .service__disc
        grid-column 2/5
        font-size serviceFS

    .faq__answer p
        padding 2vw 0

    .faq__plus
        padding 2vw

    .cases__cards
        grid-template-columns 1fr

    .card
        height 86.5vw * 1.33

    .card-name
        font-size cardNameMFS

    .card-date, .card-disc
        font-size cardDateDescMFS

    .card-tag
        font-size tagMFS

    .card__grab
        height 50vw * 1.33

    .card__grab .card-name
        font-size calc(17px + 21 * (100vw / 1240))

    .card__grab .card-date
        font-size calc(7px + 10 * (100vw / 1240))

    .card__grab .card-disc
        font-size calc(7px + 10 * (100vw / 1240))

    .card__grab .card-tag
        font-size calc(8px + 10 * (100vw / 1240))