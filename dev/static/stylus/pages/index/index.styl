.offer
    display grid
    grid-template-rows repeat(7, 1fr)
    grid-template-columns repeat(4, 1fr)
    padding 0 1vw 0 1vw
    min-height 90vh

.offer__title
    display flex
    align-items flex-end
    grid-row-start 1
    grid-column-start 1
    grid-row-end 4
    grid-column-end 3

.offer__hi
    display flex
    align-items center
    grid-row-start 4
    grid-column-start 1
    grid-row-end 6
    grid-column-end 3
    font-size subTitleFontSize

.offer__item3
    display flex
    grid-row-start 6
    grid-column-start 1
    grid-row-end 7
    grid-column-end 5
    padding 1vw 0 0 0

.offer__button
    width 13.5vw
    height 2.5vw
    font-family headerFont
    font-size footerFontSize

.offer__free
    display flex
    align-items flex-end
    grid-row-start 7
    grid-column-start 1
    grid-row-end 8
    grid-column-end 3

.offer__item42
    display flex
    align-items flex-end
    justify-content space-between
    grid-row-start 7
    grid-column-start 4
    grid-row-end 8
    grid-column-end 5

.services
    display grid
    grid-template-rows repeat(5, 1fr)
    grid-template-columns repeat(4, 1fr)
    grid-column-gap 2.2vw
    padding 0 1vw 0 1vw
    min-height 78vh

.services__item11
    display flex
    align-items center
    justify-content center
    grid-row-start 1
    grid-column-start 2
    grid-row-end 4
    grid-column-end 3

.services__img
    height 18vw

.services__discription
    display flex
    align-items center
    grid-row-start 1
    grid-column-start 3
    grid-row-end 4
    grid-column-end 5
    font-size subTitleFontSize

.services__uxui-h
    display flex
    align-items flex-end
    grid-row-start 4
    grid-column-start 1
    grid-row-end 5
    grid-column-end 2
    padding 0 0 2vw 0

.services__uxui-p
    display flex
    align-items flex-end
    grid-row-start 4
    grid-column-start 1
    grid-row-end 6
    grid-column-end 2

.services__aidentika-h
    display flex
    align-items flex-end
    grid-row-start 4
    grid-column-start 2
    grid-row-end 5
    grid-column-end 3
    padding 0 0 2vw 0

.services__aidentika-p
    display flex
    align-items flex-end
    grid-row-start 4
    grid-column-start 2
    grid-row-end 6
    grid-column-end 3

.services__smm-h
    display flex
    align-items flex-end
    grid-row-start 4
    grid-column-start 3
    grid-row-end 5
    grid-column-end 4
    padding 0 0 2vw 0

.services__smm-p
    display flex
    align-items flex-end
    grid-row-start 4
    grid-column-start 3
    grid-row-end 6
    grid-column-end 4

.services__item24
    display flex
    align-items flex-end
    justify-content flex-end
    grid-row-start 4
    grid-column-start 4
    grid-row-end 6
    grid-column-end 5

.services__button
    width 13.5vw
    height 2.5vw
    font-family headerFont
    font-size servicesFontSize

