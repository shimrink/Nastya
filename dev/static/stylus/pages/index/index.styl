.main-services
    display grid
    grid-template-rows repeat(6, 1fr)
    grid-template-columns repeat(12, 1fr)
    grid-gap 1.6vw
    align-items center
    margin-top 25vh
    min-height 78vh
    padding 0 2.13vw 0 2.13vw

.main-services__item11
    justify-self end
    padding-right 4vw
    grid-row 3/5
    grid-column 1/7

.main-services__img
    height 15.32vw

.main-services__discription
    grid-row 3/5
    grid-column 7/13
    font-size offerFontSize

.main-services__uxui-title
    grid-row 5/6
    grid-column 1/4
    display flex
    align-items flex-start
    padding-top 1vw
    border-top 1px solid

.main-services__uxui-p
    grid-row 6/7
    grid-column 1/4
    align-self start
    font-size main-services-font-size

.main-services__aidentika-title
    grid-row 5/6
    grid-column 4/7
    display flex
    align-items flex-start
    padding-top 1vw
    border-top 1px solid

.main-services__aidentika-p
    grid-row 6/7
    grid-column 4/7
    align-self start
    font-size main-services-font-size

.main-services__smm-title
    grid-row 5/6
    grid-column 7/10
    display flex
    align-items flex-start
    padding-top 1vw
    border-top 1px solid

.main-services__smm-p
    grid-row 6/7
    grid-column 7/10
    align-self start
    font-size main-services-font-size

.main-services__item24
    grid-row 6/7
    grid-column 10/13
    align-self end
    justify-self end

.main-services__button
    width 11vw
    height 2.6vw
    font-family headerFont
    font-size main-services-button-font-size

.about
    margin-top 25vw
    padding 0 2.13vw 0 2.13vw

.about__education
    display grid
    grid-template-rows 0.2fr 1fr 1fr 1.5fr
    grid-template-columns 1fr 1fr
    grid-gap 1.6vw
    border-top 2px solid
    padding 0.5vw 0 5vw 0

.about__education-title
    display flex
    flex-direction row
    align-items flex-start
    grid-row 1/2
    grid-column 1/2
    font-family headerFont

.about__narfu
    grid-row 2/3
    grid-column 2/3
    font-size offerFontSize

.about__samsung
    grid-row 3/4
    grid-column 2/3
    font-size offerFontSize

.about__skills
    grid-row 4/5
    grid-column 2/3
    border-top 2px solid
    padding-top 0.5vw

.about__skills-title
    display flex
    flex-direction row
    align-items flex-start
    font-family headerFont
    padding-bottom 1.5vw

.about__all-skills
    display grid
    grid-template-rows 1fr 1fr 1fr
    grid-template-columns 1fr 1fr 1fr
    grid-column-gap 1.6vw
    grid-row-gap 0.7vw
    font-family headerFont

.about__clients
    display grid
    grid-template-rows 0.2fr 1.5fr
    grid-template-columns 1fr 1fr
    grid-gap 1.6vw
    border-top 2px solid
    padding-top 0.5vw

.about__clients-title
    display flex
    flex-direction row
    align-items flex-start
    grid-row 1/2
    grid-column 1/2
    font-family headerFont

.about__all-clients
    grid-row 2/3
    grid-column 2/3
    display grid
    grid-template-rows 1fr 1fr 1fr
    grid-template-columns 1fr 1fr 1fr
    grid-column-gap 1.6vw
    grid-row-gap 0.7vw
    font-family headerFont

.animSlidein
    animation-name slidein
    animation-duration 0.6s

@keyframes slidein
    from
        transform translateY(50%)
        opacity 0
        animation-timing-function cubic-bezier(0, 0, .40, 1)
    to
        transform translateY(0)
        opacity 100%