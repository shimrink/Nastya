.main-services
    display grid
    grid-template-columns repeat(12, 1fr)
    grid-gap 30px
    min-height 78vh
    padding quadrupleIndent 40px

.main-services__wrap
    grid-row 1/2
    grid-column 1/13
    display grid
    grid-template-columns repeat(4, 1fr)
    grid-gap 30px

.main-services__item11_mobile, .main-services__discription_mobile
    display none

.main-services__item11
    align-self center
    justify-self end
    padding-right 4vw
    grid-row 1/2
    grid-column 1/3
    height 294px

.main-services__img
    height 294px

.main-services__discription
    align-self center
    grid-row 1/2
    grid-column 3/5
    font-size mainServicesDescFS

.main-services__all-services
    grid-row 2/3
    grid-column 1/10
    display grid
    grid-template-columns 1fr 1fr 1fr
    grid-row-gap 20px
    grid-column-gap 30px
    padding-top 3vw

.main-services__title
    display flex
    align-self flex-end
    align-items flex-start
    padding-top 13px

.main-services__first
    grid-row 1/2
    grid-column 1/2
    overflow hidden

.main-services__second
    grid-row 1/2
    grid-column 2/3
    overflow hidden

.main-services__third
    grid-row 1/2
    grid-column 3/4
    overflow hidden

.main-services__title_uxui
    grid-row 1/2
    grid-column 1/2

.main-services__uxui-p
    grid-row 2/3
    grid-column 1/2
    font-size main-services-font-size

.main-services__title_aidentika
    grid-row 1/2
    grid-column 2/3

.main-services__aidentika-p
    grid-row 2/3
    grid-column 2/3
    font-size main-services-font-size

.main-services__title_smm
    grid-row 1/2
    grid-column 3/4

.main-services__smm-p
    grid-row 2/3
    grid-column 3/4
    font-size main-services-font-size

.main-services__item24
    display flex
    grid-row 2/3
    grid-column 11/13
    align-self flex-end
    align-items center

.main-services__button
    font-family headerFont, Arial, Helvetica, sans-serif
    font-size main-services-button-font-size
    padding 0.3vw 1vw
    width 100%
    white-space nowrap

.main-services__button2, .main-services__svg, .main-services__line
    display none

.about
    padding doubleIndent 40px

.about__education
    display grid
    grid-template-columns 1fr 1fr
    grid-gap 30px
    padding-bottom 3vw
    overflow hidden

.about .top-line
    margin-bottom 0

.about__education-title
    display flex
    align-items flex-start
    grid-row 1/2
    grid-column 1/2
    font-family headerFont, Arial, Helvetica, sans-serif
    padding-top 13px

.about__narfu
    grid-row 2/3
    grid-column 2/3
    font-size offerFontSize

.about__samsung
    grid-row 3/4
    grid-column 2/3
    font-size offerFontSize

.about__skills
    grid-row 4/5
    grid-column 2/3
    overflow hidden

.about__skills-title
    display flex
    align-items flex-start
    font-family headerFont, Arial, Helvetica, sans-serif
    padding 13px 0 3vw 0

.about__all-skills
    display grid
    grid-template-columns 1fr 1fr 1fr
    grid-column-gap 30px
    grid-row-gap 13px
    font-family headerFont, Arial, Helvetica, sans-serif

.about__clients
    display grid
    grid-template-columns 1fr 1fr
    grid-gap 30px
    overflow hidden

.top-line_about
    grid-row 1/2
    grid-column 1/3

.about__clients-title
    display flex
    align-items flex-start
    grid-row 1/2
    grid-column 1/2
    font-family headerFont, Arial, Helvetica, sans-serif
    padding-top 13px

.about__all-clients
    grid-row 2/3
    grid-column 2/3
    display grid
    grid-template-columns 1fr 1fr 1fr
    grid-column-gap 30px
    grid-row-gap 13px
    font-family headerFont, Arial, Helvetica, sans-serif

.terms-grab__title
    font-size termsTitleFS
    padding doubleIndent 40px 0 40px

.terms-grab
    display flex
    margin defIndent 0 doubleIndent 0
    padding-left 20vw