.main-services
    display grid
    grid-template-columns repeat(4, 1fr)
    grid-gap 30px
    min-height 78vh
    padding quadrupleIndent 40px doubleIndent 40px

.main-services__item11
    align-self center
    justify-self end
    padding-right 4vw
    grid-row 1/2
    grid-column 1/3
    height 294px

.main-services__img
    height 294px

.main-services__discription
    align-self center
    grid-row 1/2
    grid-column 3/5
    font-size mainServicesDescFS

.main-services__all-services
    grid-row 2/3
    grid-column 1/4
    display grid
    grid-template-columns 1fr 1fr 1fr
    grid-gap 30px
    padding-top 3vw

.main-services__title
    display flex
    align-self flex-end
    align-items flex-start
    padding 1vw 0 2vw 0
    border-top 1px solid

.main-services__title_uxui
    grid-row 1/2
    grid-column 1/2

.main-services__uxui-p
    grid-row 2/3
    grid-column 1/2
    font-size main-services-font-size

.main-services__title_aidentika
    grid-row 1/2
    grid-column 2/3

.main-services__aidentika-p
    grid-row 2/3
    grid-column 2/3
    font-size main-services-font-size

.main-services__title_smm
    grid-row 1/2
    grid-column 3/4

.main-services__smm-p
    grid-row 2/3
    grid-column 3/4
    font-size main-services-font-size

.main-services__item24
    display flex
    grid-row 2/3
    grid-column 4/5
    align-self flex-end
    align-items center
    justify-self end

.main-services__button
    font-family headerFont, Arial, Helvetica, sans-serif
    font-size main-services-button-font-size
    padding 0.5vw 1vw

.main-services__button2, .main-services__svg, .main-services__line
    display none

.about
    padding doubleIndent 40px

.about__education
    display grid
    grid-template-columns 1fr 1fr
    grid-gap 30px
    border-top 1px solid
    padding 13px 0 3vw 0

.about__education-title
    display flex
    align-items flex-start
    grid-row 1/2
    grid-column 1/2
    font-family headerFont, Arial, Helvetica, sans-serif

.about__narfu
    grid-row 2/3
    grid-column 2/3
    font-size offerFontSize

.about__samsung
    grid-row 3/4
    grid-column 2/3
    font-size offerFontSize

.about__skills
    grid-row 4/5
    grid-column 2/3
    border-top 1px solid
    padding-top 13px

.about__skills-title
    display flex
    align-items flex-start
    font-family headerFont, Arial, Helvetica, sans-serif
    padding-bottom 3vw

.about__all-skills
    display grid
    grid-template-columns 1fr 1fr 1fr
    grid-column-gap 30px
    grid-row-gap 13px
    font-family headerFont, Arial, Helvetica, sans-serif

.about__clients
    display grid
    grid-template-columns 1fr 1fr
    grid-gap 30px
    border-top 1px solid
    padding-top 13px

.about__clients-title
    display flex
    align-items flex-start
    grid-row 1/2
    grid-column 1/2
    font-family headerFont, Arial, Helvetica, sans-serif

.about__all-clients
    grid-row 2/3
    grid-column 2/3
    display grid
    grid-template-columns 1fr 1fr 1fr
    grid-column-gap 30px
    grid-row-gap 13px
    font-family headerFont, Arial, Helvetica, sans-serif

.terms
    padding doubleIndent 40px

.terms__title
    font-size termsTitleFS
    margin-bottom 35px

.terms__all-wrap
    display grid
    grid-template-rows 1fr
    grid-template-columns repeat(4, 1fr)
    grid-column-gap 30px

.terms__all
    grid-row 1/2
    grid-column 2/5
    display grid
    grid-template-rows 1fr 1fr
    grid-template-columns 1fr 1fr 1fr
    grid-column-gap 30px
    grid-row-gap defIndent
    padding-top defIndent

.top-line
    width 100%
    height 1px
    background-color textColor
    margin-bottom 13px

.term__name
    display flex
    align-items flex-start
    font-family headerFont, Arial, Helvetica, sans-serif
    margin-bottom 26px

.term p
    font-size termsFS

.terms-grab, .terms-grab__title
    display none