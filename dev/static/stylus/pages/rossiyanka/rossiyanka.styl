.work
    display grid
    grid-template-columns 1fr 1fr
    padding defIndent 0

.work__title
    grid-column 1/3
    border-top 1px solid
    margin 0 40px
    display flex
    align-items flex-start
    padding 13px 0 16px 0
    font-family headerFont, Arial, Helvetica, sans-serif

.work__desc
    grid-column 2/3
    padding 0 40px 26px 40px
    font-size offerFontSize

.work__img
    grid-column 1/3
    justify-self center
    max-width 100vw

.ticker
    grid-column 1/3
    display flex
    padding defIndent 0
    overflow hidden

.ticker img
    min-width calc(200px + 1640 * (100vw / 1920))
    padding-right calc(5px + 25 * (100vw / 1920))
    animation ticker 28s infinite linear

@keyframes ticker
    0%
        transform translateX(0)
    100%
        transform translateX(-100%)