.service
    padding miniIndent 40px 40px 40px
    margin-top 0.1vh
    display grid
    grid-template-rows 0.2fr 1fr
    grid-template-columns 1fr 1fr
    grid-gap 30px
    background-color textColor
    color bgColor

.service__title
    display flex
    align-items flex-start
    grid-row 1/2
    grid-column 1/3
    border-top 2px solid
    border-color bgColor
    padding-top 0.5vw
    font-family headerFont

.service__disc
    grid-row 2/3
    grid-column 2/3
    font-size offerFontSize

.tariffs
    min-height 78vh
    padding miniIndent 40px

.tariffs__cards
    display grid
    grid-template-rows 1fr
    grid-template-columns repeat(3, 1fr)
    grid-gap 30px
    padding-top miniIndent
    min-height 30vh

.card-disc-tariffs
    font-family mainFont

.tariffs__list
    grid-row 3/4
    grid-column 1/7
    font-size main-services-font-size
    text-transform none

.tariffs__list-row
    display flex
    align-items flex-start

.service__all-services
    grid-row 2/3
    grid-column 2/3
    display grid
    grid-template-rows repeat(6, 1fr)
    grid-template-columns 1fr 1fr
    grid-column-gap 30px
    grid-row-gap 17px
    font-size offerFontSize

.service__price
    justify-self end

.method-title
    padding doubleIndent 40px 0 40px

.method
    margin miniIndent 0 defIndent 0
    padding-left 20vw

.carousel-cell
    min-width 27vw
    padding 1vw

.carousel-cell__name
    text-transform uppercase
    padding-top 2vw
    width 75%

.carousel-cell__desc
    padding-top 2vw

.faq-title
    padding defIndent 40px 0 40px

.faq
    display flex
    flex-direction column
    align-items center
    padding miniIndent 40px defIndent 40px

.faq__wrap
    border-top 1px solid
    border-bottom 1px solid

#faqName8, #faqName11, #faqName14, #faqName17
    border 0

.faq__name
    display grid
    grid-template-columns 5fr 1fr
    align-items center
    width 80vw
    padding 1.5vw 0 1.5vw 0
    border-top 1px solid

.faq__p
    grid-row 1/2
    grid-column 1/2
    font-size main-services-button-font-size

.faq__plus
    grid-row 1/2
    grid-column 2/3
    display flex
    justify-self end
    justify-content center
    align-items center
    padding 0.5vw
    border-radius 50%
    transition background-color 0.3s
    transition-timing-function ease-out
    background-color rgba(30, 30, 30, 0)

.faq__svg
    width calc(20px + 5 * (100vw / 1920))
    stroke none
    stroke-width 0.1vw
    fill none
    fill-rule evenodd
    stroke-linecap square
    stroke #fff
    transform rotate(0)

.faq__name:hover
    cursor pointer

.faq__name:hover .faq__plus
    transition background-color 0.3s
    transition-timing-function ease-out
    background-color accentColor

.faq__name:hover .faq__svg
    transition stroke 0.3s
    stroke #1e1e1e

.faq__answer
    padding-bottom 2vw
    overflow hidden
    width 80vw

.faq__svg_opened
    transform rotate(45deg)

.tariffs-mobile
    display none