.service
    margin-top 5vw
    padding 5vw 2.13vw 5vw 2.13vw
    display grid
    grid-template-rows 0.2fr 1fr
    grid-template-columns 1fr 1fr
    grid-gap 1.6vw
    background-color textColor
    color bgColor

.service-title
    display flex
    align-items flex-start
    grid-row 1/2
    grid-column 1/3
    border-top 2px solid
    border-color bgColor
    padding-top 0.5vw
    font-family headerFont

.service__disc
    grid-row 2/3
    grid-column 2/3
    font-size offerFontSize

.tariffs
    min-height 78vh
    padding 0 2.13vw 0 2.13vw
    margin-top 20vw

.tariffs__cards
    display grid
    grid-template-rows 1fr
    grid-template-columns repeat(3, 1fr)
    grid-gap 1.6vw
    min-height 30vh

.card-disc-tariffs
    font-family mainFont

.tariffs__list
    grid-row 3/4
    grid-column 1/7
    font-size main-services-font-size
    text-transform none

.tariffs__list-row
    display flex
    align-items flex-start