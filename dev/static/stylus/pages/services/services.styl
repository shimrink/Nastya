.services__title
    white-space nowrap

.look-wrap
    display grid
    grid-template-rows 1fr 1fr
    grid-template-columns 1fr 1fr 1fr
    grid-row-gap 10px
    grid-column-gap 30px
    width 100vw
    font-family headerFont, Arial, Helvetica, sans-serif
    font-size lookFS
    padding defIndent 40px 0 40px

.look-wrap p
    grid-row 1/2
    grid-column 1/4
    align-self center
    justify-self center

.look
    grid-row 2/3
    grid-column 2/3
    align-self center
    display grid
    grid-template-columns 1fr 1fr
    border 1px solid
    border-radius 9em
    height calc(20px + 25 * (100vw / 1920))
    font-size offerButtonFS

.look__button
    cursor pointer
    width 100%
    height calc(20px + 25 * (100vw / 1920))
    display flex
    justify-content center
    align-items center
    transform translate(-1px, -1px)
    line-height 0

.look__button_active
    color bgColor
    background-color accentColor
    border 1px solid
    border-radius 9em
    border-color accentColor

.service
    padding defIndent 40px
    display grid
    grid-template-columns 1fr 1fr
    grid-gap 30px

.service__title
    display flex
    align-items flex-start
    grid-row 1/2
    grid-column 1/3
    border-top 1px solid
    padding-top 13px
    font-family headerFont, Arial, Helvetica, sans-serif

.service__disc
    grid-row 2/3
    grid-column 2/3
    font-size offerFontSize

.tariffs
    min-height 78vh
    padding defIndent 40px

.tariffs__cards
    display grid
    grid-template-rows repeat(5, 1fr)
    grid-template-columns 1fr 1fr 1fr
    grid-gap 30px
    padding-top defIndent
    min-height 30vh

.card_tariff_first
    grid-row 1/4
    grid-column 1/2

.card_tariff_second
    grid-row 2/5
    grid-column 2/3

.card_tariff_third
    grid-row 3/6
    grid-column 3/4

.tariffs__cards .card-name
    white-space nowrap

.tariffs__list
    grid-row 3/4
    grid-column 1/7
    font-size tagFS
    text-transform none
    font-family mainFont, Arial, Helvetica, sans-serif

.tariffs__list-row
    display flex
    align-items flex-start

.service__all-services
    grid-row 2/3
    grid-column 2/3
    display grid
    grid-template-columns 1fr
    grid-gap 17px
    font-size allServiceFS

.service__row
    display flex
    justify-content space-between

.method-title
    padding quadrupleIndent 40px 0 40px

.method
    margin defIndent 0 doubleIndent 0
    padding-left 20vw

.faq-title
    padding doubleIndent 40px 0 40px

.faq__main-wrap
    display grid
    grid-template-columns 1fr 1fr 1fr
    grid-gap 40px

.faq
    grid-column 2/4
    display flex
    flex-direction column
    padding defIndent 40px doubleIndent 40px

.faq__wrap
    border-top 1px solid
    border-bottom 1px solid
    width 100%

#faqName8, #faqName11, #faqName14, #faqName17
    border 0

.faq__name
    display grid
    grid-template-columns 5fr 1fr
    align-items center
    width 100%
    padding 1.5vw 0 1.5vw 0
    border-top 1px solid

.faq__p
    grid-row 1/2
    grid-column 1/2
    font-size main-services-button-font-size

.faq__plus
    grid-row 1/2
    grid-column 2/3
    display flex
    justify-self end
    justify-content center
    align-items center
    padding 0.5vw
    border-radius 50%
    transition background-color 0.3s ease-out
    background-color rgba(30, 30, 30, 0)

.faq__svg
    width calc(20px + 4 * (100vw / 1920))
    stroke none
    stroke-width 1px
    fill none
    fill-rule evenodd
    stroke-linecap square
    transition all 0.4s ease
    stroke textColor
    transform translate(3%, 3%) rotate(0)

.faq__svg_white
    transition all 0.4s ease
    stroke bgColor

.faq__name:hover
    cursor pointer

.faq__name:hover .faq__plus
    transition background-color 0.3s ease-out
    background-color accentColor

.faq__name:hover .faq__svg
    transition stroke 0.3s
    stroke #1e1e1e

.faq__answer
    padding-bottom 2vw
    overflow hidden
    width 100%
    font-size answerFS

.faq__answer p
    padding 1vw 0

.faq__svg_opened
    transform translate(0, 6%) rotate(45deg)

.tariffs-mobile
    display none