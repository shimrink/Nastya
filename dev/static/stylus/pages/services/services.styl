.service
    margin-top 5vw
    padding 5vw 2.13vw 5vw 2.13vw
    display grid
    grid-template-rows 0.2fr 1fr
    grid-template-columns 1fr 1fr
    grid-gap 1.6vw
    background-color textColor
    color bgColor

.service__title
    display flex
    align-items flex-start
    grid-row 1/2
    grid-column 1/3
    border-top 2px solid
    border-color bgColor
    padding-top 0.5vw
    font-family headerFont

.service__disc
    grid-row 2/3
    grid-column 2/3
    font-size offerFontSize

.tariffs
    min-height 78vh
    padding 0 2.13vw 0 2.13vw
    margin-top 20vw

.tariffs__cards
    display grid
    grid-template-rows 1fr
    grid-template-columns repeat(3, 1fr)
    grid-gap 1.6vw
    min-height 30vh

.card-disc-tariffs
    font-family mainFont

.tariffs__list
    grid-row 3/4
    grid-column 1/7
    font-size main-services-font-size
    text-transform none

.tariffs__list-row
    display flex
    align-items flex-start

.service__disc
    grid-row 2/3
    grid-column 2/3
    font-size offerFontSize

.service__all-services
    grid-row 2/3
    grid-column 2/3
    display grid
    grid-template-rows repeat(6, 1fr)
    grid-template-columns 1fr 1fr
    grid-column-gap 1.6vw
    grid-row-gap 0.9vw
    font-size offerFontSize

.service__price
    justify-self end

.method-title
    padding 20vw 2.13vw 0 2.13vw

.method
    display flex
    cursor grab
    padding-left 20vw
    margin-top 5vw
    -webkit-user-select none
    -moz-user-select none

.method:active
    cursor grabbing

.grab-block
    display flex
    flex-direction column
    min-width 25vw
    padding 1vw

.grab-block__num
    display flex

.grab-block__name
    display flex
    text-transform uppercase
    padding-top 2vw

.grab-block__desc
    display flex
    padding-top 2vw

.faq-title
    padding 20vw 2.13vw 0 2.13vw

.faq
    display flex
    justify-content center
    flex-direction column
    padding 2vw 20vw 0 20vw

.faq__name
    display flex
    align-items center
    justify-content space-between
    padding-top 1.5vw
    border-top 1px solid
    font-size main-services-button-font-size

.faq__plus
    display flex
    justify-content center
    padding 0.5vw
    border-radius 50%

.faq__plus:hover
    background-color accentColor

.faq__svg
    width 24px
    height 24px