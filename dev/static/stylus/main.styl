@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'

html
	font-size baseFontSize
	height 100%
	line-height 1.3

body
	font-family mainFont, Arial, Helvetica, sans-serif
	height 100%
	animation pageTransition 1.5s
	background-color bgColor

.circle
	border-radius 50%
	margin-right 1vw
	min-width calc(6px + 2 * (100vw / 1920))
	min-height calc(6px + 2 * (100vw / 1920))
	transform translateY(75%)
	transition all 0.4s ease
	background-color textColor

.circle_about
	min-width calc(4px + 4 * (100vw / 1920))
	min-height calc(4px + 4 * (100vw / 1920))

.circle_tariffs
	min-width calc(1px + 7 * (100vw / 1920))
	min-height calc(1px + 7 * (100vw / 1920))

.circle_white
	transition all 0.4s ease
	background-color bgColor

::-webkit-scrollbar
	display none

::selection
	color bgColor
	background accentColor

::-moz-selection
	color bgColor
	background accentColor

.toTopButton
	position fixed
	z-index 999
	right 1.5vw
	bottom 2.5vh
	mix-blend-mode difference

.toTopButton__svg
	height 6vh

.toTopButton__path
	fill textColor

h1, h2
	font-weight 500
	font-family headerFont, Arial, Helvetica, sans-serif
	font-size titleFontSize
	line-height 1.1
	margin 0

h3
	font-weight 500
	font-family headerFont, Arial, Helvetica, sans-serif
	font-size subTitleFontSize
	margin 0

h4,h5,h6
	font-weight 500
	font-family headerFont, Arial, Helvetica, sans-serif
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color textColor
	text-decoration none

.linkUnderLine
	position relative

.linkUnderLine:after
	display block
	position absolute
	left auto
	right 0
	width 0
	height 1px
	background textColor
	content ""
	transform translateY(-0.2em)
	transition width 0.2s cubic-bezier(0, 0, .40, 1)

.linkUnderLine:hover:after, .linkUnderLine:focus:after
	width 100%
	left 0
	right auto

audio,
canvas,
iframe,
video
	vertical-align middle

textarea
	resize none

section
	position relative

input,
select
	outline none

.button
	display flex
	align-items center
	justify-content center
	border 1px solid
	border-radius 9em
	border-color accentColor
	background accentColor
	color bgColor
	text-decoration none
	z-index 3

*, *:before, *:after
	box-sizing border-box

.wrapper
	position relative
	display flex
	flex-direction column
	overflow-x hidden
	transition all 0.4s ease
	background-color bgColor
	color textColor

.wrapper__white
	transition all 0.4s ease
	background-color textColor
	color bgColor

.content
	flex 1 0 auto
	position relative
	overflow-x hidden

.offer
	position relative
	display grid
	grid-template-rows 2fr 1fr 1fr
	grid-template-columns repeat(8, 1fr)
	grid-gap 30px
	height 100vh

.offer_main
	grid-template-rows repeat(5, 1fr)
	grid-template-columns repeat(12, 1fr)

.offer__bg
	display flex
	grid-row 1/4
	grid-column 1/9
	justify-self end
	justify-content flex-end
	height 100%
	overflow hidden

.offer__bg_main
	grid-row 1/6
	grid-column 1/13

.offer__bg_main-grad:after
	content ""
	bottom 0
	width 100%
	height 40%
	position absolute
	background linear-gradient(to top, #1e1e1eff, #1e1e1e00)

.offer__bg_serv-grad:after
	content ""
	bottom 0
	width 100%
	height 42%
	position absolute
	background linear-gradient(to top, #1e1e1eff, #1e1e1e00)

.offer__bg_portf-grad:after
	content ""
	bottom 0
	width 100%
	height 43%
	position absolute
	background linear-gradient(to top, #1e1e1eff, #1e1e1e00)

.offer__bg-mobile
	display none

.offer__img
	width 100%
	height 100%
	object-fit cover
	-webkit-user-drag none

.back
	font-size offerFontSize
	grid-row 1/2
	grid-column 1/9
	align-self center
	z-index 3
	padding 0 40px

.offer__hi
	font-size offerFontSize
	grid-row 2/3
	grid-column 1/6
	align-self end
	z-index 3
	padding 2vw 40px 0 40px
	opacity 0
	transform translateY(40%)
	transition transform 0.8s ease-out 0.4s, opacity 0.8s ease-out 0.4s

.offer__hi_main
	grid-row 2/4
	align-self center

.offer__wrap
	grid-row 3/4
	grid-column 1/9
	display grid
	grid-template-rows 1fr
	grid-template-columns repeat(6, 1fr)
	grid-gap 30px
	padding 0 40px 1.5vw 40px
	z-index 3
	opacity 0
	transform translateY(15%)
	transition transform 0.8s ease-out, opacity 0.8s ease-out

.offer__wrap_main
	grid-row 4/6
	grid-column 1/13

.offer__title
	grid-row 1/2
	grid-column 1/4
	align-self end
	opacity 0
	transform translateY(30%)
	transition transform 0.8s ease-out, opacity 0.8s ease-out

.offer__title_main
	grid-row 4/6
	grid-column 1/9
	align-self start
	padding 0 40px
	z-index 3

.offer__free
	grid-row 1/2
	grid-column 4/7
	text-align right
	justify-self end
	align-self end
	padding-bottom 1.7vw

.offer__button
	grid-row 1/2
	display flex
	justify-content center
	align-items center
	border 1px solid
	border-radius 9em
	border-color accentColor
	padding 1vw
	margin-bottom 1.7vw
	align-self end
	font-family headerFont, Arial, Helvetica, sans-serif
	font-size offerButtonFS
	line-height 0
	color bgColor
	background-color accentColor
	cursor pointer
	white-space nowrap

.offer__button_active
	color textColor
	border-color textColor
	background-color rgba(30, 30, 30, 0)

.offer__button_31
	grid-column 4/5

.offer__button_21, .offer__button_32
	grid-column 5/6

.offer__button_22, .offer__button_33
	grid-column 6/7

.offer__transition
	opacity 1
	transform translateY(0)

.cases
	min-height 78vh
	padding doubleIndent 40px 0 40px

.cases__portfolio
	padding 0 40px doubleIndent 40px

.carousel
	display flex
	cursor grab
	overflow auto

.carousel:active
	cursor grabbing

.carousel-cell
	min-width calc(300px + 130 * (100vw / 1920))
	padding 0 30px

.carousel-cell__name
	text-transform uppercase
	padding-top 2vw

.carousel-cell__desc
	padding-top 2vw
	font-size carouselFS

.cases-title-wrap
	display grid
	grid-column-gap 30px
	grid-template-columns 1fr 1fr 1fr
	align-items baseline
	padding 0 40px

.cases-title
	grid-row 1/2
	grid-column 1/3
	font-size casesTitleFS
	white-space nowrap

.cases-hint
	grid-row 1/2
	grid-column 3/4
	display grid
	grid-column-gap 30px
	grid-template-columns 1fr 1fr 1fr 1fr
	align-items center

.cases-text
	grid-row 1/2
	grid-column 1/2
	white-space nowrap
	font-family headerFont, Arial, Helvetica, sans-serif

.cases-svg-wrap
	grid-row 1/2
	grid-column 2/5
	display flex
	justify-content flex-end
	overflow hidden

.cases-svg
	min-width 438px
	min-height 23px
	fill none
	transition all 0.4s ease
	stroke textColor

.cases-svg_white
	transition all 0.4s ease
	stroke bgColor

.casesGrab
	display flex
	padding-left 40px
	margin-top miniIndent

.cases__cards
	display grid
	grid-template-columns 1fr 1fr 1fr
	grid-gap 30px

.cases-arrow
	position relative
	font-family headerFont, Arial, Helvetica, sans-serif
	font-size casesArrowFS
	margin defIndent 40px doubleIndent 40px

.cases-arrow_main-services
	display none

.line
	position absolute
	width 100%
	height 1px
	transition all 0.4s ease
	background-color textColor
	z-index 1

.line_white
	transition all 0.4s ease
	background-color bgColor

.top-line
	width 100%
	height 1px
	transition all 0.4s ease
	background-color textColor
	margin-bottom 13px

.top-line_white
	transition all 0.4s ease
	background-color bgColor

.cases-arrow__button
	position absolute
	left 50%
	padding 0.3vw 1vw
	z-index 3
	transition all 0.4s ease
	color bgColor
	transform translate(-50%, -50%)
	white-space nowrap

.card_tariff
	display grid
	grid-template-columns repeat(6, 1fr)
	grid-column-gap calc(9px + 21 * (100vw / 1920))
	padding calc(9px + 21 * (100vw / 1920))
	border 1px solid
	transition all 0.4s ease
	color textColor
	text-transform uppercase
	font-family headerFont, Arial, Helvetica, sans-serif

.card_tariff__white
	transition all 0.4s ease
	color bgColor

.card-name
	grid-row 1/2
	grid-column 1/7
	font-size cardNameFS
	margin-bottom 13px

.card-disc
	grid-row 2/3
	grid-column 1/7
	font-size tagFS

.card-tag
	display flex
	border 1px solid
	border-radius 9em
	padding 0.5vw 1vw
	justify-content center
	align-items center
	align-self flex-end
	font-size tagFS
	white-space nowrap
	margin-top calc(0px + 250 * (100vw / 1920))

.card-tag_tag21
	grid-row 4/5
	grid-column 1/4

.card-tag_tag22
	grid-row 4/5
	grid-column 4/7

.card-tag_tag31
	grid-row 4/5
	grid-column 1/3

.card-tag_tag32
	grid-row 4/5
	grid-column 3/5

.card-tag_tag33
	grid-row 4/5
	grid-column 5/7

.card__grab
	margin-right 30px
	display grid
	text-transform uppercase
	font-family headerFont, Arial, Helvetica, sans-serif
	z-index 1

.card__grab_portfolio
	margin-right 0

.card__grab-shadow-low
	grid-row 1/2
	grid-column 1/2
	align-self end
	height 27%
	background linear-gradient(to top, #1e1e1eff, #1e1e1e00)
	z-index 2
	transition all 0.4s ease
	opacity 70%

.card__grab-shadow
	grid-row 1/2
	grid-column 1/2
	background bgColor
	z-index 2
	transition all 0.4s ease
	opacity 0

.card__grab-img
	grid-row 1/2
	grid-column 1/2
	line-height 0
	height calc(340px + 450 * (100vw / 1920))

.card__grab-img_portfolio
	height auto

.card__grab-img img
	height 100%

.card__grab-img_portfolio img
	width 100%
	height auto

.card__grab-tags
	grid-row 1/2
	grid-column 1/2
	display grid
	grid-template-columns repeat(5, 1fr)
	grid-row-gap 20px
	grid-column-gap 10px
	align-self start
	margin 40px
	z-index 3
	transition all 0.4s ease
	opacity 0

.card__grab-foot
	grid-row 1/2
	grid-column 1/2
	display grid
	grid-template-columns repeat(5, 1fr)
	grid-row-gap 25px
	grid-column-gap 10px
	align-self end
	margin 40px
	z-index 3

.card__grab-foot_tags
	display none

.card__grab-tag
	grid-column 1/3
	display flex
	border 1px solid
	border-radius 9em
	padding 0.5vw 1vw
	justify-content center
	align-items center
	font-size cardGrabTagFS
	white-space nowrap

.card__grab-tag1
	grid-row 1/2

.card__grab-tag2
	grid-row 2/3

.card__grab-tag3
	grid-row 3/4

.card__grab-name
	grid-row 1/2
	grid-column 1/6
	font-size cardGrabNameFS

.card__grab-line
	grid-row 2/3
	grid-column 1/3
	width 100%
	height 1px
	background-color textColor

.card__grab-desc
	grid-row 3/4
	grid-column 1/6
	font-size cardGrabDescFS

.card__grab:hover .card__grab-tags
	transition all 0.4s ease
	opacity 1

.card__grab:hover .card__grab-shadow
	transition all 0.4s ease
	opacity 70%

.card__grab:hover .card__grab-shadow-low
	transition all 0.4s ease
	opacity 20%

._active
	transform translateY(0) scaleX(100%)
	opacity 1

._anim-show
	transform translateY(15%) scaleX(100%)
	opacity 0
	transition transform 0.6s ease-out, opacity 0.6s ease-out

._anim-show-huge
	transform translateY(60%) scaleX(100%)
	opacity 0
	transition transform 0.6s ease-out, opacity 0.6s ease-out

._anim-show-big
	transform translateY(30%) scaleX(100%)
	opacity 0
	transition transform 0.6s ease-out, opacity 0.6s ease-out

._anim-show-right
	transform translateX(70%) scaleX(100%)
	opacity 0
	transition transform 0.6s cubic-bezier(0.215, 0.610, 0.355, 1.000), opacity 0.6s cubic-bezier(0.215, 0.610, 0.355, 1.000)

._anim-show-left
	transform translateX(-100%) scaleX(100%)
	opacity 0
	transition transform 0.6s ease-out, opacity 0.6s ease-out

._anim-show-center
	transform translateY(0) scaleX(0)
	transition transform 0.6s ease-out

._anim-show-opacity
	transform translateY(0) scaleX(100%)
	opacity 0
	transition transform 0.6s ease-out, opacity 0.6s ease-out

._anim-delay-one
	transition-delay 0.2s

._anim-delay-two
	transition-delay 0.4s

._anim-delay-three
	transition-delay 0.6s

._anim-show._active,
._active ._anim-show,
._anim-show-right._active,
._active ._anim-show-right,
._anim-show-left._active,
._active ._anim-show-left,
._anim-show-big._active,
._active ._anim-show-big,
._anim-show-center._active,
._active ._anim-show-center,
._anim-show-opacity._active,
._active ._anim-show-opacity,
._anim-show-huge._active,
._active ._anim-show-huge
	transform translateY(0) scaleX(100%)
	opacity 1

@keyframes pageTransition
	0%
		opacity 0
	100%
		opacity 1


