@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'

html
	font-size baseFontSize
	height 100%
	line-height 1.3
	scroll-behavior smooth

body
	font-family mainFont
	background-color bgColor
	color textColor
	height 100%

@media screen and (max-width:1199px) {
  .cursor-dot, .cursor-dot-outline {
    display: none;
  }
}


.cursor-dot,
.cursor-dot-outline
	mix-blend-mode normal
	pointer-events none
	position absolute
	top 50%
	left 50%
	border-radius 50%
	opacity 0
	position fixed
	-webkit-transform translate(-50%, -50%)
	transform translate(-50%, -50%)
	-webkit-transition opacity 0.3s ease-in-out, -webkit-transform 0.3s ease-in-out
	transition opacity 0.3s ease-in-out, -webkit-transform 0.3s ease-in-out
	transition opacity 0.3s ease-in-out, transform 0.3s ease-in-out
	transition opacity 0.3s ease-in-out, transform 0.3s ease-in-out, -webkit-transform 0.3s ease-in-out

.cursor-dot
	z-index 99999999
	width 8px
	height 8px
	background-color rgba(255, 255, 255, 0.72)
	border solid
	border-radius 50%
	border-width 0px
	border-color #ffffff

.cursor-dot-outline
	z-index 99999998
	width 36px
	height 36px
	background-color rgba(255, 255, 255, 0.00)

::-webkit-scrollbar
	display none

::selection
	color bgColor
	background accentColor

::-moz-selection
	color bgColor
	background accentColor

h1
	font-weight 400
	font-size mainTitleFontSize
	line-height 1.1
	margin 0

h2
	font-weight 400
	font-size titleFontSize
	margin 0

h3
	font-weight 400
	font-family headerFont
	font-size subTitleFontSize
	margin 0

h4
	font-weight 400
	font-size smallTitleFontSize
	margin 0

h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color textColor

.linkUnderLine
	position relative
	text-decoration none

.linkUnderLine:after
	display block
	position absolute
	left auto
	right 0
	width 0
	height 1px
	background textColor
	content ""
	transition width 0.2s cubic-bezier(0, 0, .40, 1)

.linkUnderLine:hover:after, .linkUnderLine:focus:after
	width 100%
	left 0
	right auto

audio,
canvas,
iframe,
video
	vertical-align middle

textarea
	resize none

section
	position relative

input,
select
	outline none

.button
	display flex
	align-items center
	justify-content center
	border 1px
	border-style solid
	border-radius 24px
	border-color textColor
	background bgColor
	color textColor
	text-decoration none

*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	perspective 1px
	height 100vh
	overflow-x hidden
	overflow-y auto

.content
	flex 1 0 auto
	position relative
	transform-style preserve-3d


