@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'

html
	font-size baseFontSize
	height 100%
	line-height 1.3
	scroll-behavior smooth

body
	font-family mainFont
	background-color bgColor
	color textColor
	height 100%

::-webkit-scrollbar
	width 0.55vw
	background-color rgba(194, 166, 205, 0.19)

/* ползунок скроллбара */
::-webkit-scrollbar-thumb
	background-color accentColor
	border-radius 9em

::-webkit-scrollbar-thumb:hover
	background-color textColor

::selection
	color bgColor
	background accentColor

::-moz-selection
	color bgColor
	background accentColor


h1
	font-weight 400
	font-size titleFontSize
	line-height 1
	margin 0

h2
	font-weight 400
	font-size titleFooterFontSize
	margin 0

h3
	font-weight 400
	font-family headerFont
	font-size servicesFontSize
	margin 0

h4
	font-weight 400
	font-size serviceNameFontSize
	margin 0

h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color textColor

.linkUnderLine
	position relative
	text-decoration none

.linkUnderLine:after
	display block
	position absolute
	left auto
	right 0
	width 0
	height 1px
	background textColor
	content ""
	transition width 0.2s cubic-bezier(0, 0, .40, 1)

.linkUnderLine:hover:after, .linkUnderLine:focus:after
	width 100%
	left 0
	right auto

audio,
canvas,
iframe,
video
	vertical-align middle

textarea
	resize none

section
	position relative

input,
select
	outline none

.button
	display flex
	align-items center
	justify-content center
	border 1px
	border-style solid
	border-radius 24px
	border-color textColor
	background bgColor
	color textColor
	text-decoration none

*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	perspective 1px
	height 100vh
	overflow-x hidden
	overflow-y auto

.content
	flex 1 0 auto
	position relative
	transform-style preserve-3d


