header
    position fixed
    top 0
    z-index 10
    display grid
    grid-template-rows 1fr
    grid-template-columns repeat(12, 1fr)
    grid-gap 1.6vw
    align-items center
    padding 6.5vh 2.13vw 2vh 2.13vw
    width 100vw
    background-color rgba(30, 30, 30, 0.8)
    -webkit-backdrop-filter blur(6px)
    backdrop-filter blur(6px)

.header_opened
    transition transform 0.5s
    transform translateY(0)

.header_closed
    transition transform 0.5s
    transform translateY(-100%)

.header__svg
    grid-row 1/2
    grid-column 1/9

svg
    height 1.6vw

.nav__item1
    grid-row 1/2
    grid-column 9/10

.nav__item2
    grid-row 1/2
    grid-column 10/11

.nav__item3
    grid-row 1/2
    grid-column 11/12
    justify-self end

.nav__item4
    grid-row 1/2
    grid-column 12/13
    justify-self end

.drop-menu
    display flex
    flex-direction column
    position absolute
    transition height 0.5s 0.3s
    height 0
    margin-top 2vw
    transform translateX(-2.5vw)
    overflow hidden
    background-color rgba(30, 30, 30, 0.8)
    -webkit-backdrop-filter blur(6px)
    backdrop-filter blur(6px)

.drop-menu a
    margin 1.5vw 1vw 0 1vw

.nav__item1:hover .drop-menu
    transition height 0.5s
    height 9.5vw