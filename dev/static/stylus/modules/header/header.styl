header
    position fixed
    top 0
    z-index 10
    display grid
    grid-template-rows 1fr
    grid-template-columns repeat(12, 1fr)
    grid-gap 30px
    align-items center
    padding 6.5vh 40px 0 40px
    width 100vw
    background-color rgba(30, 30, 30, 0.8)
    -webkit-backdrop-filter blur(6px)
    backdrop-filter blur(6px)

.header_opened
    transition transform 0.5s
    transform translateY(0)

.header_closed
    transition transform 0.5s
    transform translateY(-100%)

.header__svg
    grid-row 1/2
    grid-column 1/9

.header__logo
    fill #fff
    height calc(31px + 10 * (100vw / 1920))

.nav__item1
    grid-row 1/2
    grid-column 9/10

.nav__item2
    grid-row 1/2
    grid-column 10/11

.nav__item3
    grid-row 1/2
    grid-column 11/12
    justify-self end

.nav__item4
    grid-row 1/2
    grid-column 12/13
    justify-self end

.drop-menu
    display flex
    flex-direction column
    position absolute
    transition height 0.5s 0.4s
    height 0
    margin-top 3vw
    transform translateX(-2.5vw)
    overflow hidden
    background-color rgba(30, 30, 30, 0.8)
    -webkit-backdrop-filter blur(6px)
    backdrop-filter blur(6px)

.drop-menu .drop-menu__item
    margin 1.5vw 1vw 0 1vw

.nav__item1:hover .drop-menu
    transition height 0.5s
    height 9.5vw

.header__item5, .header__burger, .burger-menu
    display none