header
    position fixed
    top 0
    z-index 10
    display grid
    grid-template-rows 1fr
    grid-template-columns 1fr 1fr
    grid-column-gap 30px
    width 100vw
    height 13.875vh
    align-items center
    padding 3.2vh 40px 0 40px
    background-color rgba(30, 30, 30, 0.8)
    -webkit-backdrop-filter blur(6px)
    backdrop-filter blur(6px)

.header_opened
    transition transform 0.5s
    transform translateY(0)

.header_closed
    transition transform 0.5s
    transform translateY(-100%)

.header__svg
    grid-column 1/2
    height 25px

.header__logo
    fill #fff
    height 25px

.header__nav
    display flex
    grid-column 2/3
    justify-content space-between

.header__item5, .header__burger, .burger-menu, .rotate-please
    display none