footer
  display grid
  grid-template-rows 2fr 1fr 1fr
  grid-template-columns repeat(6, 1fr)
  grid-gap 1.6vw
  min-height 80vh
  position relative
  align-items baseline
  margin-top defIndent
  padding 0 2.13vw 2vw 2.13vw

.footer__title
  grid-row 1/2
  grid-column 1/7
  align-self start
  font-family headerFont
  font-size footerTitleFontSize

.footer__item21
  grid-row 2/3
  grid-column 1/3
  font-size footerFS

.footer__item22
  grid-row 2/3
  grid-column 3/4
  font-size footerFS

.footer__item23
  grid-row 2/3
  grid-column 4/6
  justify-self end
  font-size footerFS

.footer__button
  grid-row 2/3
  grid-column 6/7
  justify-self end
  font-size footerFS

.footer__item31
  grid-row 3/4
  grid-column 1/3
  align-self end

.footer__item32
  grid-row 3/4
  grid-column 3/5
  align-self end

.footer__item33
  grid-row 3/4
  grid-column 5/7
  align-self end
  justify-self end